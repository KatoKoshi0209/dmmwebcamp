<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book do |f| %>
  <div class="field">
    <% if @book.errors[:title].any? %>
      <div class="field_with_errors">
    <% end %>

    <label for="book_title">Title</label>

    <% if @book.errors[:title].any? %>
      </div> 
    <% end %>

    <%= f.text_field :title , class: "book_title" %>
  </div>
  <div class="field">
    <% if @book.errors[:body].any? %>
      <div class="field_with_errors">
    <% end %>

    <label for="book_title">Body</label>

    <% if @book.errors[:body].any? %>
      </div> 
    <% end %>

    <%= f.text_area :body , class: "book_body" %>
  </div>
  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>
  <%= link_to "Show", book_path(@book.id) %> | 
  <%= link_to "Back",books_path %>
<% end %>